{
    "name": "Web Bluetooth Polyfill",
    "description": "Windows 10 Web Bluetooth API Polyfill",
    "permissions": [
        "nativeMessaging",
        "tabs",
        "activeTab",
        "background",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "web_accessible_resources": [
        "polyfill.js"
    ],
    "browser_action": {
        "default_title": "Web Bluetooth Polyfill"
    },
    "version": "1.0",
    "minimum_chrome_version": "56",
    "manifest_version": 2
}