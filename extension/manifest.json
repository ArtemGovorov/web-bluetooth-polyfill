{
    "name": "Web Bluetooth Polyfill",
    "description": "Windows 10 Web Bluetooth API Polyfill",
    "permissions": [
        "nativeMessaging",
        "tabs",
        "activeTab",
        "background",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "version": "1.0",
    "minimum_chrome_version": "56",
    "manifest_version": 2
}